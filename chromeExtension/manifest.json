{
  "manifest_version": 2,

  "name": "Webpage Formatter",
  "description": "This extension allows user changing webpage rendering",
  "version": "1.3",
  "background": {
    "scripts": [
      "bgSettings.js"
    ]
  },
  "browser_action": {
    "default_icon": "on.png",
    "default_popup": "pop/index.html",
	"default_title": "Tool for changing webpage rendering"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["main.css"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": [
    "pop/*",
    "*.js",
    "*.css"
  ]
}
